#include<iostream>
using namespace std;

int main() {
    int i = 1; // Step 1: Initialization of the loop control variable
    while (i <= 10) { // Step 2: Condition to check before each iteration
        cout << "hello" << " " << i << endl; // Print "hello" and the value of i
        i++; // Step 3: Increment the loop control variable
    }
    return 0;
}
